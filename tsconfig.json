{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "packages/contracts/api/dist",
    "rootDir": "packages/contracts/api/src",
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },
  "include": [
    "packages/contracts/api/src/**/*.ts",
    "packages/contracts/api/generated/**/*.d.ts"
  ],
  "exclude": ["**/dist", "**/node_modules"]
}