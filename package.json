{
  "name": "rerekisho-reaction",
  "private": true,
  "version": "1.0.0",
  "description": "履歴書をブラウザ上で作成するためのWebアプリケーションのサンプルです。",
  "repository": "github:ynam1990/rerekisho-reaction",
  "license": "MIT",
  "author": "ynam1990",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev:client": "npm run dev --workspace app/client",
    "dev:storybook": "npm run storybook --workspace app/client",
    "dev:server": "npm run dev --workspace app/server",
    "dev:mockapi": "prism mock ./openapi/spec/openapi.yml -p 3003",
    "dev:db": "npm run docker:start --workspace app/server",
    "prisma:migrate": "npm run prisma:migrate --workspace app/server",
    "gen:contract": "openapi-typescript openapi/spec/openapi.yml -o packages/contracts/api/generated/openapi.d.ts",
    "build:contract": "tsc -p tsconfig.json",
    "build:app": "npm run build --workspace app/client && npm run build --workspace app/server",
    "gen:revision": "app/codedeploy/gen_revision.sh",
    "upload:revision": "aws s3 cp revision.zip s3://rerekisho-reaction-code-deploy-s3-bucket/revision.zip"
  },
  "workspaces": [
    "app/*",
    "packages/contracts/*"
  ],
  "overrides": {
    "lodash": "4.17.23",
    "hono": "^4.11.7",
    "@prisma/dev": {
      "hono": "^4.11.7"
    }
  },
  "devDependencies": {
    "@stoplight/prism-cli": "^5.14.2",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.3"
  }
}
